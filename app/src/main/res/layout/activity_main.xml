<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:gravity="start|center_vertical"
    android:orientation="vertical"
    tools:context="com.tinsuke.retrofit.coroutines.MainActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Call based call:"
        />

    <TextView
        android:id="@+id/call_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requesting..."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Coroutine based call:"
        />

    <TextView
        android:id="@+id/coroutine_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requesting..."
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Coroutine with Response based call:"
        />

    <TextView
        android:id="@+id/coroutine_response_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requesting..."
        />

</LinearLayout>
